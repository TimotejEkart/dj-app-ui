@page "/profil"
@rendermode InteractiveServer

<PageTitle>Profil</PageTitle>

<head>
    <style>
        body {
            background-color: #0a0a0a;
            color: #ffffff;
            font-family: 'Arial', sans-serif;
        }

        .navbar, .footer {
            background-color: #1a1a1a;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ff499e !important;
        }

        .nav-link {
            color: #ffffff !important;
        }

        .nav-link:hover {
            color: #49b6ff !important;
        }

        .profile-container {
            text-align: center;
            padding-top: 50px;
        }

        .profile-img {
            width: 180px;
            height: 180px;
            border-radius: 50%;
            border: 4px solid #49b6ff;
            box-shadow: 0 0 15px rgba(73, 182, 255, 0.5);
            transition: transform 0.3s ease;
        }

        .profile-img:hover {
            transform: scale(1.1);
        }

        .card {
            background-color: #1a1a1a;
            border: 2px solid white;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .card-header {
            background: linear-gradient(to right, #ff499e, #49b6ff);
            color: #ffffff;
            font-weight: bold;
            padding: 20px;
            text-align: center;
            font-size: 1.3rem;
        }

        .card-body {
            color: white;
            padding: 20px;
        }

        .btn-primary, .btn-danger {
            font-weight: bold;
            width: 100%;
            padding: 12px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background-color: #49b6ff;
            border-color: #49b6ff;
        }

        .btn-primary:hover {
            background-color: #779be7;
            border-color: #779be7;
        }

        .btn-danger {
            background-color: #FF2E63;
            border-color: #FF2E63;
        }

        .btn-danger:hover {
            background-color: #ff1a4a;
            border-color: #ff1a4a;
        }
    </style>
</head>

<section class="profile-container">
    <div class="container">
        <div style="background:url('Images/soundwave1.gif'); background-repeat: no-repeat; background-position: center; height: 360px;">
        <img src="Images/profil.png" alt="Profilna slika" class="profile-img" style="margin-top: 85px; margin-left: -10px">
        </div>
        <h2 class="mt-3">DJ Ime</h2>
        <p style="font-size:1.2rem; color: #49b6ff;"><strong>Vrsta računa: Premium DJ</strong></p>
        <p href="mailto:dj@example.com" style="font-size:1.2rem; color: #49b6ff;"><strong>Email: dj@example.com</strong></p>
    </div>
</section>

<section class="profile-details mt-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <b>Upravljanje Profila</b>
                    </div>
                    <div class="card-body text-center">
                        <button class="btn btn-primary mb-3">Nastavi novo profilno sliko</button>
                        <button class="btn btn-primary mb-3">Ponastavi geslo</button>
                        <button class="btn btn-danger">Odjava</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>