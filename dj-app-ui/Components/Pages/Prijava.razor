@page "/prijava"
@rendermode InteractiveServer

<PageTitle>Prijava</PageTitle>

<head>
    <style>
        body {
            background-color: #0a0a0a;
            color: #ffffff;
            font-family: 'Arial', sans-serif;
        }

        .navbar, .footer {
            background-color: #1a1a1a;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ff499e !important;
        }

        .nav-link {
            color: #ffffff !important;
        }

            .nav-link:hover {
                color: #49b6ff !important;
            }


        .card {
            background-color: #1a1a1a;
            border: none;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 10px;
            overflow: hidden;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        .card-header {
            background-color: #121416;
            color: #FF2E63;
            font-weight: bold;
            padding: 20px;
            text-align: center;
        }

        .card-body {
            color: white;
            padding: 20px;
        }

        .form-group {
            position: relative;
            margin-bottom: 30px; 
        }

            .form-group label {
                position: absolute;
                top: -10px;
                left: 10px;
                font-size: 0.9rem;
                color: #ffffff;
                font-weight: bold;
            }

        .form-control {
            background-color: #2a2a2a;
            border: none;
            color: #ffffff;
            padding: 12px;
            border-radius: 5px;
            width: 100%;
            box-sizing: border-box;
        }

            .form-control:focus {
                background-color: #3a3a3a;
                color: #ffffff;
            }

        .input-icon {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            color: #ffffff;
        }

        .btn-primary {
            background-color: #49b6ff;
            border-color: #49b6ff;
            font-weight: bold;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #779be7;
                border-color: #779be7;
            }

        .btn-secondary {
            background: #FF2E63;
            border-color: #FF2E63;
            font-weight: bold;
            width: 100%;
        }

            .btn-secondary:hover {
                background: #ff1a4a;
                border-color: #ff1a4a;
            }

        .text-center {
            text-align: center;
        }

        .mt-4 {
            margin-top: 1.5rem;
        }

        .mb-4 {
            margin-bottom: 1.5rem;
        }
    </style>
</head>

<section id="login-hero" class="hero-section text-center">
    <div class="container">
        <h1 class="display-2"><b>Prijava in Registracija</b></h1>
        <p class="lead" style="font-size:1.5rem">Prijavite se ali ustvarite nov račun za dostop do aplikacije.</p>
    </div>
</section>

<section class="feature-section" style="padding-top:100px">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card" style="border:2px solid white">
                    <div class="card-header">
                        <i class="fas fa-sign-in-alt feature-icon"></i> <b style="font-size:1.5rem">Prijava</b>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="email">E-pošta</label>
                                <div class="input-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <input id="email" type="email" class="form-control" placeholder="E-pošta" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Geslo</label>
                                <div class="input-icon">
                                    <i class="fas fa-lock"></i>
                                </div>
                                <input id="password" type="password" class="form-control" placeholder="Geslo" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Prijava</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card" style="border:2px solid white">
                    <div class="card-header">
                        <i class="fas fa-user-plus feature-icon"></i> <b style="font-size:1.5rem; color: #49b6ff">Registracija</b>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="username">Uporabniško ime</label>
                                <div class="input-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                                <input id="username" type="text" class="form-control" placeholder="Uporabniško ime" required>
                            </div>
                            <div class="form-group">
                                <label for="email-register">E-pošta</label>
                                <div class="input-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <input id="email-register" type="email" class="form-control" placeholder="E-pošta" required>
                            </div>
                            <div class="form-group">
                                <label for="password-register">Geslo</label>
                                <div class="input-icon">
                                    <i class="fas fa-lock"></i>
                                </div>
                                <input id="password-register" type="password" class="form-control" placeholder="Geslo" required>
                            </div>
                            <button type="submit" class="btn btn-secondary">Registracija</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
